<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <h1 class="mb-4">Update <%= @tour.name %>'s details</h1>
      <%= simple_form_for(@tour) do |f| %>
       <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :name  %>
        <%= f.input :description %>
        <%= f.submit 'Update', class: 'btn btn-primary mr-2' %>
        <%= link_to 'Cancel', tours_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
