<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <%= simple_form_for(@tour) do |f| %>
       <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :name  %>
        <%= f.text_area :description, :rows => 8, :cols => 120 %>
        <%= f.submit 'Update', class: 'btn btn-primary mr-2 mt-3' %>
        <%= link_to 'Cancel', tours_path, class: 'btn btn-secondary mt-3' %>
      <% end %>
      <br>
      <br>
      <%= link_to 'Show', @tour %> |
     <%= link_to 'Back', tours_path %>
    </div>
  </div>
</div>
