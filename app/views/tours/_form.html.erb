<div class="container">
  <div class="row">
    <div class="col-6 mt-3 form-label-style">
        <%= simple_form_for(@tour) do |f| %>
         <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <%= f.input :name  %>
          Description in Home page:
          <%= f.text_area :description, :rows => 6, :cols => 120 %>
          Full information in Walking tours:
          <%= f.text_area :full_information, :rows => 10, :cols => 120 %>
          <%= f.submit 'Update', class: 'btn btn-primary mr-2 mt-3' %>
          <%= link_to 'Cancel', tours_path, class: 'btn btn-secondary mt-3' %>
        <% end %>
        <br>
        <div class="mr-5 mb-5">
        <%= link_to 'Show', @tour %> |
        <%= link_to 'Back', tours_path %>
      </div>
    </div>
  </div>
</div>
